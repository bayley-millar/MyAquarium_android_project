<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bayley.myaquirium">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.com.example.bayley.myaquirium.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignIn">
            <intent-filter>
                <action android:name="com.example.bayley.myaquirium.SignIn" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".UserPage">
            <intent-filter>
                <action android:name="com.example.bayley.myaquirium.UserPage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ActiveBeacon">
            <intent-filter>
                <action android:name="com.example.bayley.myaquirium.ActiveBeacon" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchBeacons">
            <intent-filter>
                <action android:name="com.example.bayley.myaquirium.SearchBeacons" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       <!-- <activity android:name=".FragmentTest">
            <intent-filter>
                <action android:name="com.example.bayley.myaquirium.SearchBeacons" />

                <category android:name=".FragmentTest" />
            </intent-filter>
        </activity>-->
    </application>

</manifest>